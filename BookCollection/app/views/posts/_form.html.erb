<%= form_with(model: post, local: true) do |form| %>
  <% if post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :author %>
    <%= form.text_field :author %>
  </div>

  <div class="field">
  <%= form.label :genre %>
  <%= form.select :genre, [
    'Choose from the Genre List',
    'Action and Adventure',  
    'Biographies and Autobiographies',
    'Classics',
    'Cookbooks',
    'Comic Book or Graphic Novel',
    'Detective and Mystery',
    'Essays',
    'Fantasy',
    'History',
    'Historical Fiction',
    'Horror',
    'Literary Fiction',
    'Memoir',
    'Poetry',
    'Self-Help',
    'Science fiction',
    'Short Stories',
    'Suspense and Thrillers',
    'True Crime'
  ]%>
  </div>

  <div class="field">
  <%= form.label :price %>
  <%= form.text_field :price %>
  </div>

  <div class="field">
  <%= form.label :published_date %>
  <%= form.date_field :date %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
